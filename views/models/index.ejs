<%- contentFor('content') %>

<div class="mt-3">
  <a href="/models/new">New Model</a>
</div>

<table class="table table-striped border mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Model No.</th>
      <th scope="col">Model Name</th>
      <th scope="col">Capacity</th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% for (const record of model_records) { %>
      <tr>
        <td><%= record.model_id %></td>
        <td><%= record.model_name %></td>
        <td><%= record.capacity %></td>
        <td><a href="#">delete</a></td>
      </tr>
    <% } %>
  </tbody>
</table>

  <p>&nbsp;</p>
  </div> <!-- browse -->

  <div id="insert">
    <form method="POST" id="addmodel">
      <legend><strong>Add Model</strong></legend>
      <fieldset class="fields">
        <label>Model Name</label>
        <input type="text" name="modelname" />

        <label>Mileage</label>
        <input type="text" name="modelcapacity" />
      </fieldset>
      <input class="btn" type="submit" id="addmodel" value="Add Model">
      <input class="btn" type="button" value="cancel" onClick="browseModels()">
    </form>
  </div><!-- insert -->

  <p>&nbsp;</p>
  <div id="update">
    <form method="POST" id="updatemodel">
      <legend><strong>Update Model Data</strong></legend>
        <fieldset class="fields">

        <input type="hidden" name="modelID" id="updatemodelID" value="1">
        <label>ID: </label> 1 <!--TODO: Get ID of the one clicked on-->

        <label>Model Name</label>
        <input type="text" name="modelname" />

        <label>Mileage</label>
        <input type="text" name="modelcapacity" />
      </fieldset>

      <input class="btn" type="submit" id="updatesavemodel" value="Save Changes">
      <input class="btn" type="button" value="cancel" onClick="browseModels()">
    </form>
  </div><!-- update -->

  <p>&nbsp;</p>
  <div id="delete" style="display: block">
    <form method="POST" id="deletemodel">
        <legend><strong>Delete Model</strong></legend>
            <fieldset class="fields">
            <p>Are you sure you wish to delete the following?</p>
            <input type="hidden" name="modelID" id="deletemodelID" value="1">
            <label>Model with <strong>ID </strong></label> 1 <!--TODO: Get ID of the one clicked on-->
            <label>and <strong>Name </strong> </label> Boeing 767 and 
            <label><strong>Capacity </strong> </label> 216
              
      </fieldset>
      <input class="btn" type="submit" id="deletemodel" value="Delete Model">
      <input class="btn" type="button" value="cancel" onClick="browseModels()">
    </form> 
  </div><!-- delete -->

  </body>
</html>
