<%- contentFor('content') %>

<div class="border p-3 mt-3">
  <form method="POST" action="/models">
    <legend><strong>Add Model</strong></legend>

    <div class="row">
      <div class="col">
        <label>Model Name</label>
        <input type="text" name="model_name" class="form-control" />
      </div>
    </div>

      <div class="col">
        <label>Capacity</label>
        <input type="text" name="capacity" class="form-control" />
      </div>
    </div>

    <div class="col">
      <div class="mt-3">
        <input class="btn btn-primary" type="submit" value="Add Model">
        <input class="btn btn-secondary" type="button" value="Cancel" onClick="javascript:history.back()">
      </div>
    </div>
  </form>
</div>