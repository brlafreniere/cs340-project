<%- contentFor('content') %>

<div class="border p-3 mt-3">
  <form method="POST" action="/passengers">
    <legend><strong>Add Passenger</strong></legend>

    <div class="row">
      <div class="col">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" />
      </div>
    </div>

      <div class="col">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" />
      </div>
    </div>

    <div class="col">
      <div class="mt-3">
        <input class="btn btn-primary" type="submit" value="Add Passengers">
        <input class="btn btn-secondary" type="button" value="Cancel" onClick="javascript:history.back()">
      </div>
    </div>
  </form>
</div>