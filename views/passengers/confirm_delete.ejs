<%- contentFor('content') %>

<div class="border p-3 mt-3">
  <form method="POST" action="/passengers/<%= passenger.passenger_id %>/delete">
    <legend><strong>Delete Passenger</strong></legend>

    <div>
      <p>Are you sure you wish to delete the following?</p>
      <table class="table border">
        <thead>
          <tr>
            <th>Passenger No.</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>
        <tr>
          <td><%= passenger.passenger_id %></td>
          <td><%= passenger.first_name %></td>
          <td><%= passenger.last_name %></td>
        </tr>
      </table>
    </div>

    <div class="mt-3">
      <input class="btn btn-danger" type="submit" value="Delete Passenger">
      <input class="btn btn-secondary" type="button" value="Cancel" onClick="javascript:history.back()">
    </div>
  </form>
</div>