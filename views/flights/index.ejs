<%- contentFor('content') %>

<div class="mt-3">
  <a href="/flights/new">New Flight</a>
</div>

<table class="table table-striped border mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Flight No.</th>
      <th scope="col">Plane No.</th>
      <th scope="col">Plane Model</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% for (const flight of flights) { %>
      <tr>
        <td><%= flight.flight_id %></td>
        <td><%= flight.plane_id %></td>
        <td><%= flight.model_name %></td>
        <td><a href="/flights/<%= flight.flight_id %>/edit">edit</a></td>
        <td><a href="/flights/<%= flight.flight_id %>/confirm_delete">delete</a></td>
      </tr>
    <% } %>
  </tbody>
</table>



  </body>
</html>
