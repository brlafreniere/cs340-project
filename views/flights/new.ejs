<%- contentFor('content') %>

<div class="border p-3 mt-3">
  <form method="POST" action="/flights">
    <legend><strong>Add Flight</strong></legend>

    <div class="row">
      <div class="col">
        <label>Plane No.</label>
        <select name="plane_id" class="form-select">
          <option value="">None</option>
          <% for (const plane of planes) { %>
            <option value="<%= plane.plane_id %>">
              #<%= plane.plane_id %>
              <%= plane.model_name %>
            </option>
          <% } %>
        </select>
      </div>

      <div class="col">
        <label>Departure</label>
        <input type="datetime-local" name="departure_time" class="form-control" />
      </div>

      <div class="col">
        <label>Arrival</label>
        <input type="datetime-local" name="arrival_time" class="form-control" />
      </div>
    </div>

    <div class="row mt-3">
      <div class="col">
        <label>Departure Airport Code</label>
        <input type="text" name="depart_code" class="form-control" />
      </div>

      <div class="col">
        <label>Arrival Airport Code</label>
        <input type="" name="arrive_code" class="form-control" />
      </div>

      <div class="col">
        <label>Pilots (Select Multiple)</label>
        <select name="pilot_ids" class="form-control" multiple>
          <% for (const pilot of pilots) { %>
            <option value="<%= pilot.pilot_id %>">
              <%= pilot.first_name %>
              <%= pilot.last_name %>
            </option>
          <% } %>
        </select>
      </div>
    </div>

    <div class="col">
      <div class="mt-3">
        <input class="btn btn-primary" type="submit" value="Add Flight">
        <input class="btn btn-secondary" type="button" value="Cancel" onClick="javascript:history.back()">
      </div>
    </div>
  </form>
</div>