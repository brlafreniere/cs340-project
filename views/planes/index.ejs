<%- contentFor('content') %>

<div class="mt-3">
  <a href="/planes/new">New Plane</a>
</div>

<table class="table table-striped border mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Plane No.</th>
      <th scope="col">Model</th>
      <th scope="col">Mileage</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% for (const record of records) { %>
      <tr>
        <td><%= record.plane_id %></td>
        <td><%= record.model_name %></td>
        <td><%= record.mileage %></td>
        <td><a href="#">delete</a></td>
      </tr>
    <% } %>
  </tbody>
</table>

  <p>&nbsp;</p>
  </div> <!-- browse -->

  <div id="insert">
    <form method="POST" id="addplane">
      <legend><strong>Add Plane</strong></legend>
      <fieldset class="fields">
        <label>Model Name</label>
        <select name="planemodel">
          <option value="0" selected>&nbsp;</option>
          <option value="1">Boeing 767</option>
          <option value="2">Boeing 777</option>
          <option value="3">Airbus A330</option>
        </select>

        <label>Mileage</label>
        <input type="text" name="planemilage" />
      </fieldset>
      <input class="btn" type="submit" id="addplane" value="Add Plane">
      <input class="btn" type="button" value="cancel" onClick="browsePlanes()">
    </form>
  </div><!-- insert -->

  <p>&nbsp;</p>
  <div id="update">
    <form method="POST" id="updateplane">
      <legend><strong>Update Plane Data</strong></legend>
        <fieldset class="fields">

        <input type="hidden" name="planeID" id="updateplaneID" value="1">
        <label>ID: </label> 1 <!--TODO: Get ID of the one clicked on-->

        <label>Model Name</label>
        <select name="planemodel">
          <option value="0" selected>&nbsp;</option>
          <option value="1">Boeing 767</option>
          <option value="2">Boeing 777</option>
          <option value="3">Airbus A330</option>
        </select>
        <label>Mileage</label>
        <input type="text" name="planemilage" />
      </fieldset>

      <input class="btn" type="submit" id="updatesaveplane" value="Save Changes">
      <input class="btn" type="button" value="cancel" onClick="browsePlanes()">
    </form>
  </div><!-- update -->

  <p>&nbsp;</p>
  <div id="delete" style="display: block">
    <form method="POST" id="deleteplane">
        <legend><strong>Delete Plane</strong></legend>
            <fieldset class="fields">
            <p>Are you sure you wish to delete the following?</p>
            <input type="hidden" name="planeID" id="deleteplaneID" value="1">
            <label>Plane with <strong>ID </strong></label> 1 <!--TODO: Get ID of the one clicked on-->
            <label>and <strong>Model ID </strong> </label> 1

      </fieldset>
      <input class="btn" type="submit" id="deleteplane" value="Delete Plane">
      <input class="btn" type="button" value="cancel" onClick="browsePlanes()">
    </form>
  </div><!-- delete -->

  </body>
</html>
